<div class="row">
  <div class="col-md-2">
  <h5> Hi, <%= @current_user.username %></h5>
    <h7> <%= link_to 'Sign out', signout_path, :method => :delete %></h7>
  <%= turbo_stream_from "rooms" %>
  <h4> Create new room:
  <%= render partial: 'layouts/new' %>
  </h4>
  <h3> Rooms </h3>
    <div id="rooms">
    <%= render @rooms %>
    </div>

</div>
<div class="col-md-10 bg-dark text-light">
  <% if @single_room %>
  <h4 class="text-center"> <%= @single_room.name %></h4>
    <% end %>
  <%= turbo_stream_from @single_room %>
  <div id='messages'>
    <%= render partial: 'layouts/new_message_form' %>

  </div>
</div>
</div>